---
import { Image } from 'astro:assets';
import Avatar from '../assets/images/avatar.jpg';
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6">
  <a href="/" class="block">
    <h1 class="text-4xl font-bold text-center text-white">Alex Sánchez 🚀</h1>
  </a>
  <p class="mt-4 text-lg text-center text-gray-300">🇲🇽 Software Engineer</p>
  <p class="mt-4 text-lg text-center text-gray-300">
    👨‍💻 Full Stack Developer | 📱 Content Creator | 💻 Tech lover
  </p>
  <div class="flex justify-center mt-8">
    <Image
      src={Avatar}
      alt="Alex Sánchez"
      class="w-64 rounded-xl"
      loading="lazy"
    />
  </div>
</header>
